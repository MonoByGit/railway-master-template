# Database (Railway auto-provides in production)
DATABASE_URL=postgresql://user:password@localhost:5432/myapp

# Authentication (NextAuth)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000

# === OPTIONAL INTEGRATIONS ===

# AI/LLM Services
OPENAI_API_KEY=sk-...                              # OpenAI GPT models
GOOGLE_GENERATIVE_AI_API_KEY=AIza...               # Google Gemini

# File Storage
UPLOADTHING_SECRET=sk_live_...                     # UploadThing
UPLOADTHING_APP_ID=app_...                         # UploadThing App ID
AWS_ACCESS_KEY_ID=AKIA...                          # AWS S3 (alternative)
AWS_SECRET_ACCESS_KEY=...                          # AWS S3
AWS_REGION=eu-west-1                               # AWS S3
AWS_BUCKET_NAME=my-bucket                          # AWS S3

# Payment Processing
STRIPE_SECRET_KEY=sk_test_...                      # Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_...                 # Stripe
STRIPE_WEBHOOK_SECRET=whsec_...                    # Stripe webhooks
MOLLIE_API_KEY=test_...                            # Mollie (NL/EU)

# Communication
TELEGRAM_BOT_TOKEN=123456:ABC-DEF...               # Telegram Bot API
TELEGRAM_CHAT_ID=123456789                         # Telegram Chat ID
RESEND_API_KEY=re_...                              # Resend (email)
SENDGRID_API_KEY=SG...                             # SendGrid (email)
TWILIO_ACCOUNT_SID=AC...                           # Twilio (SMS)
TWILIO_AUTH_TOKEN=...                              # Twilio

# Monitoring & Analytics
SENTRY_DSN=https://...@sentry.io/...               # Sentry error tracking
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...   # Sentry (public)
NEXT_PUBLIC_GOOGLE_ANALYTICS=UA-XXXXXXXXX-X        # Google Analytics
POSTHOG_API_KEY=phc_...                            # PostHog analytics

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL=https://...                 # Upstash Redis
UPSTASH_REDIS_REST_TOKEN=AY...                     # Upstash Token

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=...                               # Google OAuth
GOOGLE_CLIENT_SECRET=...                           # Google OAuth
GITHUB_ID=...                                      # GitHub OAuth
GITHUB_SECRET=...                                  # GitHub OAuth

# === RAILWAY DEPLOYMENT NOTES ===
#
# Required for Railway:
# - DATABASE_URL: Auto-provided by Railway PostgreSQL
# - NEXTAUTH_SECRET: Generate new secret for production
# - NEXTAUTH_URL: Set to your Railway app URL
#
# Optional but recommended:
# - SENTRY_DSN: Error tracking in production
# - UPSTASH_REDIS: Rate limiting
# - UPLOADTHING or S3: File uploads
#
# Add only the services you actually use!
